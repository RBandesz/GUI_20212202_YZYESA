<Window x:Class="SpaceBunnyJump.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceBunnyJump"
        xmlns:renderer="clr-namespace:SpaceBunnyJump.Renderer"
        mc:Ignorable="d"
        Title="SpaceBunnyJump" Height="800" Width="500" Loaded="Window_Loaded" ResizeMode="NoResize" KeyDown="Window_KeyDown"> 
    <Grid x:Name="grid">
        <ScrollViewer x:Name="CanvasViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
            <Canvas x:Name="Canvas" Width="500">
                <renderer:Display x:Name="display" />
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
